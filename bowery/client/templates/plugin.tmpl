<div class="group plugin">
  <h3>Description</h4>
  <p class="subtitle">{{.Plugin.Description}}</p>
</div>

{{if .Plugin.Requirements}}
<div class="group plugin">
  <h3>Requirements</h3>
  <p class="subtitle">{{.Plugin.Requirements}}</p>
</div>
{{end}}

<div class="group plugin">
  <ul class="list">

  {{$version := .Plugin.Version}}
  {{range .Apps}}
    <li class="item borderless">
      <div class="item-title">
        <a href="/applications/{{.App.ID}}">
          <h3>{{if .App.Name}}{{.App.Name}}{{else}}{{.App.LocalPath}}{{end}}</h3>
          <p class="subtitle">{{.App.RemoteAddr}}</p>
        </a>
      </div>
      <div class="toggle {{if .IsActive}}active{{end}}" data-app="{{.App.ID}}" data-plugin="{{$version}}">
        <div class="toggle-handle"></div>
      </div>
    </li>
  {{end}}
  </ul>
</div>
