<div class="group settings">
  <form class="form" method="put" action="/_/settings">
    <div class="field">
      <input type="text" name="name" class="field-input" value="{{.Developer.Name}}" />
      <label for="name" class="field-label">Name</label>
    </div>
    <div class="field">
      <input type="text" name="email" class="field-input" value="{{.Developer.Email}}" />
      <label for="email" class="field-label">Email</label>
    </div>
    <div class="field-submit">
      <input class="submit" type="submit" value="Submit" />
    </div>
  </form>
</div>
